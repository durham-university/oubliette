<% if can?(:start_fixity_job, DurhamRails::BackgroundJob) %>
  <li><a href="#" data-target="#start_fixity_modal" data-toggle="modal">Start fixity check</a></li>

  <% content_for :modal_dialogs do %>
    <div id="start_fixity_modal" class="modal fade fixity_job_dialog" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="ajax-modal-close close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h1 class="modal-title">Start fixity check job</h1>
          </div>
          <div class="popup-tool-form">
          <%= form_tag(engine_paths.start_fixity_job_path, method: "post") do %>
            <dl>
              <dt><%= label_tag(:file_limit, "Maximum number of files to check")%></dt>
              <dd><%= number_field_tag(:file_limit, 500) %></dd>
              <dt><%= label_tag(:file_limit, "Minimum time since last check")%></dt>
              <dd><%= number_field_tag(:time_limit, 30) %> days</dd>
            </dl>
            <p>
              <input type="submit" class="btn btn-primary" value="Start job"/>
              <button type="button" class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
            </p>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
