<%= simple_form_for @form, url: oubliette.polymorphic_path(@form) do |f| %>
  <% if item.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="descriptions_display">
    <div class="well">
      <% @form.present_terms(self) do |r, term| %>
        <%= r.value(term, f: f) %>
      <% end %>
    </div><!-- /well -->
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>

    <% if @resource.new_record? %>
      <% if @parent %>
        <%= link_to('Cancel', oubliette.polymorphic_path(@parent), { class: 'btn btn-link' }) %>
      <% else %>
      <%= link_to('Cancel', oubliette.polymorphic_path(@resource), { class: 'btn btn-link' }) %>
      <% end %>
    <% else %>
      <%= link_to('Cancel', oubliette.polymorphic_path(@resource), { class: 'btn btn-link' }) %>
    <% end %>
  </div>
<% end %>
